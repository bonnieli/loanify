<%= stylesheet_link_tag    "typeahead", media: "all", "data-turbolinks-track" => true %>
<%= stylesheet_link_tag    "datepicker", media: "all", "data-turbolinks-track" => true %>

<div class="create_transaction_container">
	<form id="create_transaction" role="form">
		<input class="typeahead form-control" type="text" name="Name" placeholder="Search for people" >
		<input class="form-control" type="hidden" name="BorrowerKey">
		<input class="form-control" type="hidden" name="B_Picture">
		<input class="form-control" type="hidden" name="BorrowerEmail" id="be">
		<input class="form-control" type="text" name="Amount" placeholder="Amount" id="Amount">
		<input class="form-control" type="text" name="Date" class="datepicker" data-date-format="dd-mm-yyyy" placeholder="Date">
		<input class="form-control" type="textbox" name="Description" placeholder="Description">
		<input class="btn btn-default" type="submit" value="Submit" id="submit">
	</form>
</div>

<div id="success" style="display:none">
	Your transaction has been created! <%= link_to 'View transaction?', uoi_path %> or <%= link_to 'create another transaction?', transaction_create_path %>
</div>



<%= javascript_include_tag "bootstrap-datepicker", "data-turbolinks-track" => true %>

<%= javascript_include_tag "handlebars-v1.3.0", "data-turbolinks-track" => true %>
<%= javascript_include_tag "typeahead.bundle", "data-turbolinks-track" => true %>
<%= javascript_include_tag "typeahead.jquery", "data-turbolinks-track" => true %>
<%= javascript_include_tag "typeahead.bundle.min", "data-turbolinks-track" => true %>

<%= javascript_include_tag "jquery.validate", "data-turbolinks-track" => true %>

<script>var all_users = <%= raw CGI.unescapeHTML(@all_users) %>;</script>
<%= javascript_include_tag "create_transaction", "data-turbolinks-track" => true %>
